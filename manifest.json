{
    "manifest_version": 2,

    "name": "Crisppic",
    "description": "Only kinopoisk",
    "version": "1.0",

    "options_ui": {
        "page": "plugin/options.html",
        "chrome_style": true
    },

    "browser_action": {
        "default_icon": "plugin/icon.png",
        "default_popup": "plugin/popup.html"
    },

    "background": {
        "scripts": [
            "plugin/main.js"
        ]
    },
    "commands": {},
    "permissions": [
        "storage",
        "activeTab",
        "<all_urls>"
    ]
}
